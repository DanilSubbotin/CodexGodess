}

<h1>AddCar</h1>

<h4>Cars</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Cars.Name" class="control-label"></label>
                <input asp-for="Cars.Name" class="form-control" />
