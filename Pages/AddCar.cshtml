            </div>
            <div class="form-group">
                <label asp-for="Cars.Description" class="control-label"></label>
                <input asp-for="Cars.Description" class="form-control" />
                <span asp-validation-for="Cars.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cars.Price" class="control-label"></label>
                <input asp-for="Cars.Price" class="form-control" />
                <span asp-validation-for="Cars.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

